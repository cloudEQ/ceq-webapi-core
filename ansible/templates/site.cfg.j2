server {
    listen       8081;
    listen       [::]:8081;
    server_name  localhost;

    location / {
        root {{ app_dir }}/build;
        index index.html
        try_files $uri $uri/ /index.html =404;
    }

    error_page 404 /404.html;
        location = /40x.html {
    }

    error_page 500 502 503 504 /50x.html;
        location = /50x.html {
    }

}
